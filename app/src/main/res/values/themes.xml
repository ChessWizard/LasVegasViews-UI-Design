<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LasVegasViews" parent="Theme.MaterialComponents.DayNight.DarkActionBar" tools:targetApi = "lollipop">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--Ekranin tam ekran halinde olmasi icin gerekli etiket Ã¶zellikleri.-->
        <item name = "windowActionBar">false</item><!--Yukaridaki bar'in kaldirilmasi saglandi.-->
        <item name = "windowNoTitle">true</item><!--Yukaridaki uyugulamann basligi kaldirildi.-->

        <!-- Animasyonlarimizi yapabilmek icin gerekli etiketler.-->
        <item name = "android:windowContentTransitions">true</item>
        <item name = "android:windowTranslucentStatus">true</item>
        <item name = "android:windowTranslucentNavigation">true</item>

    </style>
</resources>