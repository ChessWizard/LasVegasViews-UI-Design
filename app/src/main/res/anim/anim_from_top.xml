<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Yukaridan baslayip asagi dogru harekte eden animasyon-->

    <translate
        android:duration="1000"
        android:fromXDelta="0%"
        android:fromYDelta="100%"
        />

    <!--Gorunurluk(opacity) degerinin ayarlanmasi-->
    <alpha
        android:duration="1500"
        android:fromAlpha="0"
        android:toAlpha="1"
        />
    <!--0'dan(hic gorunmez) 1'e dogru(tamamen gorunur) hale gelmesi 1500 milisaniye(1.5 saniye) sursun-->

</set>